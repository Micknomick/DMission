<div class="bg-black text-white h-screen p-6">
  <h1 class="text-2xl font-bold mb-4">Edit Task</h1>

  <%= form_with model: @task, url: task_path(@task), method: :patch, local: true do |f| %>
    <!-- タイトル入力 -->
    <div class="mb-4">
      <%= f.label :title, "Title", class: "block text-gray-300 text-sm font-medium mb-1" %>
      <%= f.text_field :title, class: "w-full p-2 bg-gray-700 text-white rounded-lg" %>
    </div>

    <!-- 説明入力 -->
    <div class="mb-4">
      <%= f.label :description, "Description", class: "block text-gray-300 text-sm font-medium mb-1" %>
      <%= f.text_area :description, class: "w-full p-2 bg-gray-700 text-white rounded-lg" %>
    </div>

    <!-- ミッション選択 -->
    <div class="mb-4">
      <%= f.label :mission_id, "Mission", class: "block text-gray-300 text-sm font-medium mb-1" %>
      <%= f.collection_select :mission_id, @missions, :id, :name, { prompt: "Select a mission" }, class: "w-full p-2 bg-gray-700 text-white rounded-lg" %>
    </div>

    <!-- 進捗率入力 -->
    <div class="mb-4">
      <%= f.label :progress_rate, "Progress", class: "block text-gray-300 text-sm font-medium mb-1" %>
      <%= f.number_field :progress_rate, in: 0..100, class: "w-full p-2 bg-gray-700 text-white rounded-lg" %>
    </div>

    <!-- 期日設定 -->
    <div class="mb-4">
      <%= f.label :deadline, "Deadline", class: "block text-gray-300 text-sm font-medium mb-1" %>
      <%= f.date_field :deadline, class: "w-full p-2 bg-gray-700 text-white rounded-lg" %>
    </div>

    <!-- ボタン -->
    <div class="flex gap-4">
      <%= f.submit "Save Changes", class: "bg-blue-500 text-white py-2 px-4 rounded-lg" %>
      <%= link_to "Cancel", tasks_path, class: "bg-gray-600 text-white py-2 px-4 rounded-lg" %>
    </div>
  <% end %>
</div>
