<div class="flex items-center justify-center h-screen bg-black">
  <div class="bg-gray-800 p-8 rounded-lg text-white shadow-lg max-w-lg w-full">
    <h1 class="text-3xl font-bold mb-6 text-center border-b border-gray-600 pb-4">Mission Details</h1>

    <!-- ミッションの詳細情報 -->
    <div class="space-y-4 text-lg">
      <p><strong class="text-gray-400">Name:</strong> <span class="text-white"><%= @mission.name %></span></p>
      <p><strong class="text-gray-400">Description:</strong> <span class="text-white"><%= @mission.description %></span></p>
      <p><strong class="text-gray-400">Owner:</strong> <span class="text-white"><%= @mission.user.name if @mission.user %></span></p>
      <p><strong class="text-gray-400">Team:</strong> <span class="text-white"><%= @mission.team.name if @mission.team %></span></p>
      <p><strong class="text-gray-400">Completed:</strong> <span class="text-white"><%= @mission.is_completed ? "Yes" : "No" %></span></p>
      <p><strong class="text-gray-400">Deadline:</strong> <span class="text-white"><%= @mission.deadline.strftime('%Y-%m-%d') if @mission.deadline %></span></p>
    </div>

    <!-- 戻るリンク -->
    <div class="mt-6 text-center">
      <%= link_to 'Back to Mission List', missions_path, class: 'text-blue-500 hover:text-blue-700 font-semibold text-lg' %>
    </div>
  </div>
</div>
