<div class="flex flex-col justify-center items-center h-screen bg-black text-white">
  <div class="text-center mb-10">
    <div class="text-4xl font-bold">Dmission</div>
    <h2 class="text-4xl mt-2">サインアップ</h2>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-4" }) do |f| %>
    <div class="field flex flex-col items-start w-full max-w-sm">
      <%= f.label :email, class: "mb-2" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-2 bg-gray-200 rounded-lg focus:outline-none" %>
    </div>

    <div class="field flex flex-col items-start w-full max-w-sm text-black">
      <%= f.label :password, class: "mb-2" %>
      <% if @minimum_password_length %>
        <em class="text-gray-400">(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-4 py-2 bg-gray-200 rounded-lg focus:outline-none" %>
    </div>

    <div class="field flex flex-col items-start w-full max-w-sm">
      <%= f.label :password_confirmation, class: "mb-2 text-white" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-4 py-2 bg-gray-200 rounded-lg focus:outline-none text-black" %>
    </div>

    <div class="actions w-full max-w-sm">
      <%= f.submit "Sign up", class: "w-full bg-blue-500 text-white py-2 px-4 rounded-lg hover:bg-blue-600" %>
    </div>
  <% end %>

  <div class="mt-4">
    <%= render "devise/shared/links" %>
  </div>
</div>
