<div class="flex flex-col justify-center items-center h-screen bg-black text-white">
  <div class="text-center mb-10">
    <div class="text-4xl font-bold">Dmission</div>
    <h2 class="text-4xl mt-2">Forgot your password?</h2>
  </div>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "space-y-4" }) do |f| %>
    <div class="field flex flex-col items-start w-full max-w-sm">
      <%= f.label :email, class: "mb-2" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-2 bg-gray-200 rounded-lg focus:outline-none" %>
    </div>

    <div class="actions w-full max-w-sm">
      <%= f.submit "Send me reset password instructions", class: "w-full bg-blue-500 text-white py-2 px-4 rounded-lg hover:bg-blue-600" %>
    </div>
  <% end %>

  <div class="mt-4">
    <%= render "devise/shared/links" %>
  </div>
</div>
